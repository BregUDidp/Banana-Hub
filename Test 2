local killTab = Window:CreateTab("||   - Bendy and Ink Machine", "monitor-x")
local Section = killTab:CreateSection("")

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

local killAuraEnabled = false
local killRange = 20  -- à¸£à¸°à¸¢à¸°à¸†à¹ˆà¸²à¹€à¸£à¸´à¹ˆà¸¡à¸•à¹‰à¸™ (studs)

local function isPlayerModel(model)
    -- à¸•à¸£à¸§à¸ˆà¸§à¹ˆà¸²à¹€à¸›à¹‡à¸™à¸œà¸¹à¹‰à¹€à¸¥à¹ˆà¸™à¸ˆà¸£à¸´à¸‡à¸«à¸£à¸·à¸­à¹„à¸¡à¹ˆ (à¸¡à¸µ Player instance)
    return Players:GetPlayerFromCharacter(model) ~= nil
end

local function killMonster(humanoid)
    if not humanoid or humanoid.Parent == player.Character then return end
    
    pcall(function()
        humanoid.Health = 0
        humanoid:BreakJoints()
        if humanoid.Health > 0 then
            if humanoid.Parent:FindFirstChild("HumanoidRootPart") then
                humanoid.Parent.HumanoidRootPart:Destroy()
            end
            humanoid:Destroy()
        end
    end)
end

local function monsterKillAuraLoop()
    if not killAuraEnabled or not player.Character or not player.Character:FindFirstChild("HumanoidRootPart") then return end
    
    local myRoot = player.Character.HumanoidRootPart
    local myPosition = myRoot.Position
    
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("Model") then
            -- à¸‚à¹‰à¸²à¸¡à¸–à¹‰à¸²à¹€à¸›à¹‡à¸™à¸œà¸¹à¹‰à¹€à¸¥à¹ˆà¸™à¸ˆà¸£à¸´à¸‡
            if isPlayerModel(obj) then continue end
            
            local humanoid = obj:FindFirstChildOfClass("Humanoid")
            local rootPart = obj:FindFirstChild("HumanoidRootPart") or obj:FindFirstChild("Torso") or obj:FindFirstChild("UpperTorso")
            
            if humanoid and rootPart then
                local distance = (rootPart.Position - myPosition).Magnitude
                if distance <= killRange then
                    killMonster(humanoid)
                end
            end
        end
    end
end

RunService.Heartbeat:Connect(monsterKillAuraLoop)

local function enableKillAura()
    killAuraEnabled = true
    
    Rayfield:Notify({
        Title = "[ ðŸª“ ] Monster Bendy Kill Aura On!",
        Content = "[ âœ… ] Monster Kill Aura On!",
        Duration = 1,
        Image = "swords",
    })
end

local function disableKillAura()
    killAuraEnabled = false
    
    Rayfield:Notify({
        Title = "[ ðŸª“ ] Monster Bendy Kill Aura Off!",
        Content = "[ ðŸ›‘ ] Monster Kill Aura Off!",
        Duration = 1,
        Image = "swords",
    })
end

killTab:CreateButton({
    Name = "[ ðŸª“ ]  Kill Aura Monster - Bendy - Boss Bendy - Only",
    Callback = function()
        if killAuraEnabled then
            disableKillAura()
        else
            enableKillAura()
        end
    end
})

killTab:CreateSlider({
    Name = "[ ðŸ“ ]  Slider Kill Aura Range",
    Range = {5, 5000},
    Increment = 1,
    Suffix = "Range Aura",
    CurrentValue = 20,
    Callback = function(value)
        killRange = value
        if killAuraEnabled then
            Rayfield:Notify({
                Title = "Range Kill Aura Updated",
                Content = "Range Monster: " .. value .. " Range",
                Duration = 1,
                Image = "ruler",
            })
        end
    end
})

local Paragraph = PTab:CreateParagraph({Title = "Kill Aura Monster Bendy Boss Bendy Weapon", Content = "Kill Aura Monster Bendy Boss Bendy Weapon And Style"})

player.CharacterAdded:Connect(function()
    task.wait(1)
end)
