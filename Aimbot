--// ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£ Rainbow Gun
local rainbowGunEnabled = false
local currentGun = nil
local highlight = nil
local hue = 0
local gunConnections = {}
local rainbowLoop = nil

--// ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£ ESP
local espEnabled = false
local espTraceEnabled = true
local espBoxes = {}

--// ============================================== --
--//               RAINBOW GUN SYSTEM              --
--// ============================================== --

local function createHighlight(tool)
    if highlight then highlight:Destroy() end
    highlight = Instance.new("Highlight")
    highlight.FillColor = Color3.fromHSV(0, 1, 1)
    highlight.OutlineColor = Color3.fromHSV(0, 1, 1)
    highlight.FillTransparency = 0.3
    highlight.OutlineTransparency = 0
    highlight.Parent = tool
    highlight.Adornee = tool:FindFirstChild("Handle") or tool
end

local function updateRainbowGun()
    if not rainbowGunEnabled or not currentGun or not highlight then return end
    hue = (hue + 0.01) % 1
    local color = Color3.fromHSV(hue, 1, 1)
    highlight.FillColor = color
    highlight.OutlineColor = color
    for _, part in pairs(currentGun:GetDescendants()) do
        if part:IsA("BasePart") and part.Name ~= "HumanoidRootPart" then
            part.Color = color
        end
    end
end

local function onToolEquipped(tool)
    if not rainbowGunEnabled then return end
    currentGun = tool
    task.wait(0.1)
    createHighlight(tool)
end

local function onToolUnequipped()
    if currentGun and highlight then
        highlight:Destroy()
        highlight = nil
    end
    currentGun = nil
end

local function setupGunDetection(char)
    for _, conn in pairs(gunConnections) do conn:Disconnect() end
    gunConnections = {}

    local function connectTool(tool)
        table.insert(gunConnections, tool.Equipped:Connect(function() onToolEquipped(tool) end))
        table.insert(gunConnections, tool.Unequipped:Connect(onToolUnequipped))
    end

    for _, child in pairs(char:GetChildren()) do
        if child:IsA("Tool") then connectTool(child) end
    end
    table.insert(gunConnections, char.ChildAdded:Connect(function(child)
        if child:IsA("Tool") then connectTool(child) end
    end))

    local backpack = LocalPlayer:WaitForChild("Backpack")
    for _, child in pairs(backpack:GetChildren()) do
        if child:IsA("Tool") then connectTool(child) end
    end
    table.insert(gunConnections, backpack.ChildAdded:Connect(function(child)
        if child:IsA("Tool") then connectTool(child) end
    end))
end

local function toggleRainbowGun(state)
    rainbowGunEnabled = state
    if state then
        game.StarterGui:SetCore("SendNotification", {
            Title = "‚úÖ ‡πÄ‡∏õ‡∏¥‡∏î ‡∏õ‡∏∑‡∏ô‡∏™‡∏µ‡∏™‡∏≤‡∏¢‡∏£‡∏∏‡πâ‡∏á‡πÅ‡∏•‡πâ‡∏ß!",
            Text = "‚úÖ ‡∏£‡∏∞‡∏ö‡∏ö‡∏™‡∏µ‡∏£‡∏∏‡πâ‡∏á‡∏ñ‡∏π‡∏Å‡πÄ‡∏õ‡∏¥‡∏î‡πÅ‡∏•‡πâ‡∏ß",
            Duration = 6
        })
        if not rainbowLoop then
            rainbowLoop = RunService.Heartbeat:Connect(updateRainbowGun)
        end
        if LocalPlayer.Character then setupGunDetection(LocalPlayer.Character) end
    else
        game.StarterGui:SetCore("SendNotification", {
            Title = "‚ùå ‡∏õ‡∏¥‡∏î ‡∏õ‡∏∑‡∏ô‡∏™‡∏µ‡∏™‡∏≤‡∏¢‡∏£‡∏∏‡πâ‡∏á‡πÅ‡∏•‡πâ‡∏ß!",
            Text = "‚ùå ‡∏£‡∏∞‡∏ö‡∏ö‡∏™‡∏µ‡∏£‡∏∏‡πâ‡∏á‡∏ñ‡∏π‡∏Å‡∏õ‡∏¥‡∏î‡πÅ‡∏•‡πâ‡∏ß",
            Duration = 4
        })
        if rainbowLoop then rainbowLoop:Disconnect() rainbowLoop = nil end
        if highlight then highlight:Destroy() highlight = nil end
        currentGun = nil
    end
end

LocalPlayer.CharacterAdded:Connect(setupGunDetection)
if LocalPlayer.Character then setupGunDetection(LocalPlayer.Character) end

local espEnabled = false
local espTraceEnabled = true
local espBoxes = {}

local function rainbow(speed, offset)
    local t = tick() * (speed or 1) + (offset or 0)
    return Color3.fromHSV(t % 1, 1, 1)
end

local function createESP(player)
    if not DrawingAvailable or espBoxes[player] then return end
    local box = {}
    box.main = Drawing.new("Square")
    box.main.Thickness = 2
    box.main.Filled = false
    box.main.Visible = false

    box.name = Drawing.new("Text")
    box.name.Size = 16
    box.name.Center = true
    box.name.Outline = true
    box.name.Visible = false

    box.tracer = Drawing.new("Line")
    box.tracer.Thickness = 2
    box.tracer.Visible = false

    espBoxes[player] = box
end

local function removeESP(player)
    local box = espBoxes[player]
    if box then
        pcall(function()
            box.main:Remove()
            box.name:Remove()
            box.tracer:Remove()
        end)
        espBoxes[player] = nil
    end
end

RunService.RenderStepped:Connect(function()
    if not DrawingAvailable then return end

    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            local humanoid = player.Character:FindFirstChild("Humanoid")
            if humanoid and humanoid.Health > 0 then
                if espEnabled then
                    createESP(player)
                    local box = espBoxes[player]
                    local root = player.Character.HumanoidRootPart
                    local pos, onScreen = Camera:WorldToViewportPoint(root.Position)

                    if onScreen then
                        local scale = math.clamp(2000 / (Camera.CFrame.Position - root.Position).Magnitude, 20, 200)
                        local size = Vector2.new(scale * 0.6, scale)
                        local center = Vector2.new(pos.X, pos.Y)

                        box.main.Size = size
                        box.main.Position = center - size/2
                        box.main.Color = (autoTarget == player) and Color3.fromRGB(255, 0, 0) or rainbow(1, 0)
                        box.main.Visible = true

                        box.name.Position = center + Vector2.new(0, -size.Y/2 - 18)
                        box.name.Text = player.Name .. ((autoTarget == player) and " üéØ ‡πÄ‡∏•‡πá‡∏á‡∏´‡∏±‡∏ß‡∏ï‡∏±‡∏ß‡∏•‡∏∞‡∏Ñ‡∏£‡πÅ‡∏•‡πâ‡∏ß" or "")
                        box.name.Color = (autoTarget == player) and Color3.fromRGB(255, 0, 0) or rainbow(1, 0.15)
                        box.name.Visible = true

                        if espTraceEnabled then
                            local screenCenter = Vector2.new(Camera.ViewportSize.X/2, Camera.ViewportSize.Y/2)
                            box.tracer.From = screenCenter
                            box.tracer.To = center
                            box.tracer.Color = (autoTarget == player) and Color3.fromRGB(255, 0, 0) or rainbow(1, 0.25)
                            box.tracer.Visible = true
                        end
                    else
                        box.main.Visible = false
                        box.name.Visible = false
                        box.tracer.Visible = false
                    end
                else
                    removeESP(player)
                end
            else
                removeESP(player)
            end
        else
            removeESP(player)
        end
    end
end)

Players.PlayerRemoving:Connect(removeESP)
