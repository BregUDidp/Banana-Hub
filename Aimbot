    Name = "[ ðŸŽ¯ ]  à¸›à¸´à¸”/à¹€à¸›à¸´à¸” à¸à¸²à¸£à¸¥à¹‡à¸­à¸„à¹€à¸›à¹‹à¸²à¸«à¸¡à¸²à¸¢à¸„à¸™à¹à¸šà¸šà¸¥à¸·à¹ˆà¸™à¹†",
    CurrentState = false,
    Callback = function(v) 
        showFov = v
    end
})

ATab:CreateSlider({
    Name = "[ ðŸ“ ]  à¸›à¸£à¸±à¸šà¹€à¸ªà¹‰à¸™à¸§à¸‡à¸à¸¥à¸¡",
    Range = {50, 300}, Increment = 5, CurrentValue = 120,
    Callback = function(v) fovRadius = v end
})

ATab:CreateSlider({
    Name = "[ âš¡ ]  à¸›à¸£à¸±à¸šà¸„à¸§à¸²à¸¡à¸¥à¸·à¹ˆà¸™à¹„à¸«à¸¥à¸‚à¸­à¸‡à¸¥à¹‡à¸­à¸„à¹€à¸›à¹ˆà¸²",
    Range = {1, 30}, Increment = 1, CurrentValue = 12,
    Callback = function(v) smoothness = v / 100 end
})
