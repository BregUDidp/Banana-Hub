-- Services
local Players = cloneref(game:GetService("Players"))
local ReplicatedStorage = cloneref(game:GetService("ReplicatedStorage"))
local Workspace = cloneref(game:GetService("Workspace"))

local ETab = Window:CreateTab("[ - Macro 99 ‡∏Ñ‡∏∑‡∏ô - ]", "flame-kindling")
local Section3 = ETab:CreateSection("[ üå≤ ]  ‡πÇ‡∏ã‡∏ô‡∏°‡∏≤‡πÇ‡∏Ñ‡∏ß")

-- ====== ‡∏õ‡∏∏‡πà‡∏°‡πÄ‡∏ï‡∏¥‡∏°‡πÑ‡∏ü‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥ (‡∏´‡∏•‡∏±‡∏Å!) ======
local autoFuelRunning = false
ETab:CreateToggle({
    Name = "üî• ‡πÄ‡∏ï‡∏¥‡∏°‡πÑ‡∏ü‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥",
    CurrentValue = false,
    Flag = "AutoFuel",
    Callback = function(Value)
        autoFuelRunning = Value
        if Value then
            spawn(autoFuelLoop)
        end
    end,
})

-- ====== ‡∏ï‡∏±‡∏ß‡πÅ‡∏õ‡∏£ ======
local itemsFolder = Workspace:WaitForChild("Items")
local remoteEvents = ReplicatedStorage:WaitForChild("RemoteEvents")
local startDragging = remoteEvents:WaitForChild("RequestStartDraggingItem")
local stopDragging = remoteEvents:WaitForChild("StopDraggingItem")
local campfireCenter = Workspace:WaitForChild("Map"):WaitForChild("Campground"):WaitForChild("MainFire"):WaitForChild("Center")

local fuelItems = {"Biofuel","Coal","Fuel Canister","Oil Barrel"}
local heightOffset = 15
local distanceOffset = 1
local delayBetweenItems = 0

-- ====== ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏•‡∏≤‡∏Å‡πÑ‡∏≠‡πÄ‡∏ó‡∏° ======
local function dragItemToPosition(itemToDrag, position)
    local clonedItem = cloneref(itemToDrag)
    startDragging:FireServer(clonedItem)
    task.spawn(function()
        if clonedItem:IsA("BasePart") then
            clonedItem.CFrame = CFrame.new(position)
        elseif clonedItem:IsA("Model") and clonedItem.PrimaryPart then
            clonedItem:SetPrimaryPartCFrame(CFrame.new(position))
        end
    end)
    task.wait(0.05)
    stopDragging:FireServer(clonedItem)
end

-- ====== ‡πÄ‡∏ï‡∏¥‡∏°‡πÑ‡∏ü ======
function dragAllFuelToFire()
    local campfireCFrame = campfireCenter.CFrame
    local targetPosition = (campfireCFrame * CFrame.new(0, heightOffset, -distanceOffset)).Position
    
    local itemsToDrag = {}
    for _, item in ipairs(itemsFolder:GetChildren()) do
        if table.find(fuelItems, item.Name) then
            table.insert(itemsToDrag, item)
        end
    end
    
    if #itemsToDrag > 0 then
        for _, item in ipairs(itemsToDrag) do
            dragItemToPosition(item, targetPosition)
            task.wait(delayBetweenItems)
        end
    end
end

-- ====== Auto Fuel Loop ======
function autoFuelLoop()
    while autoFuelRunning do
        dragAllFuelToFire()
        task.wait(2) -- ‡∏ó‡∏∏‡∏Å 2 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ
    end
end
