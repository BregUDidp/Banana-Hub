local musicTab = Window:Tab({
    Title = "||   - Boombox ID",
    Icon = "drum", -- optional
    Locked = false,
})

local Section = musicTab:Section({ 
    Title = "                  { [ - Playing Music - ] }",
})

-- ‡∏™‡∏£‡πâ‡∏≤‡∏á Sound Object (‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÄ‡∏•‡πà‡∏ô‡πÄ‡∏û‡∏•‡∏á)
local MusicSound = Instance.new("Sound")
MusicSound.Name = "BackgroundMusic"
MusicSound.Looped = true  
MusicSound.Volume = 0.5  
MusicSound.Parent = game:GetService("SoundService")

local Input = musicTab:Input({
    Title = "[ ü•Å ]  ID Music Play",
    Desc = "[ - Input Music ID - ]",
    Value = "",
    InputIcon = "play",
    Type = "Input",
    Placeholder = "Enter text...",
    Callback = function(input) 
        local soundId = tonumber(input)
        if soundId then
            MusicSound.SoundId = "rbxassetid://" .. soundId
            MusicSound:Play()
            
        else
            
        end
    end
})

local Button = musicTab:Button({
    Title = "[ üõë ]  Stop Music ID",
    Desc = "[ - Stop ID Music Input - ]",
    Icon = "octagon-x",
    Locked = false,
    Callback = function()
        MusicSound:Stop()
    end
})

local Slider = musicTab:Slider({
    Title = "[ üîä ]  Volume Music",
    Desc = "[ - Volume Music ID - ]",
    Step = 1,
    Value = {
        Min = 0,
        Max = 5000,
        Default = 120,
    },
    Callback = function(value)
        MusicSound.Volume = value / 100
    end
})

local Section = musicTab:Section({ 
    Title = "                       { [ - ID Music - ] }",
})

local Button = musicTab:Button({
    Title = "[ üåÆ ]  Music: Rainning Taco",
